{
  "name": "my-telegram-bot",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "check": "biome check --write . && pnpm test",
    "db:generate": "drizzle-kit generate",
    "db:migrate:create": "wrangler d1 migrations create telegram-bot-db",
    "db:migrate:local": "wrangler d1 migrations apply telegram-bot-db --local",
    "db:migrate:remote": "wrangler d1 migrations apply telegram-bot-db --remote",
    "db:studio": "drizzle-kit studio",
    "prepare": "husky"
  },
  "dependencies": {
    "drizzle-orm": "^0.45.1",
    "grammy": "^1.40.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@cloudflare/workers-types": "^4.20260210.0",
    "@vitest/coverage-v8": "^4.0.18",
    "drizzle-kit": "^0.31.9",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "vitest": "^4.0.18",
    "wrangler": "^4.64.0"
  },
  "lint-staged": {
    "*.{js,ts,json}": [
      "biome check --write"
    ]
  }
}
