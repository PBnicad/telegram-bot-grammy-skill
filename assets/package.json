{
    "name": "my-telegram-bot",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "wrangler dev",
        "deploy": "wrangler deploy",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "lint": "biome check .",
        "lint:fix": "biome check --write .",
        "format": "biome format --write .",
        "check": "biome check --write . && pnpm test",
        "db:generate": "prisma generate",
        "db:migrate:create": "wrangler d1 migrations create telegram-bot-db",
        "db:migrate:diff": "prisma migrate diff --from-local-d1 --to-schema-datamodel ./prisma/schema.prisma --script",
        "db:migrate:local": "wrangler d1 migrations apply telegram-bot-db --local",
        "db:migrate:remote": "wrangler d1 migrations apply telegram-bot-db --remote",
        "prepare": "husky"
    },
    "dependencies": {
        "@prisma/adapter-d1": "^6.0.0",
        "@prisma/client": "^6.0.0",
        "grammy": "^1.39.0"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@cloudflare/workers-types": "^4.20241230.0",
        "@vitest/coverage-v8": "^3.0.0",
        "husky": "^9.1.0",
        "lint-staged": "^15.3.0",
        "prisma": "^6.0.0",
        "vitest": "^3.0.0",
        "wrangler": "^3.99.0"
    },
    "lint-staged": {
        "*.{js,ts,json}": [
            "biome check --write"
        ]
    }
}